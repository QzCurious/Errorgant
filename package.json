{
  "name": "errorgant",
  "version": "0.1.1",
  "description": "try catch can get messy quickly, Errorgant is a simple type-safe way to handle errors inline.",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "dev": "vitest",
    "lint": "tsc --noEmit",
    "ci": "npm run lint && npm run test && npm run build",
    "prepublishOnly": "npm run ci"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "prettier": "^3.5.2",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.6"
  }
}
